<h1>Create Fruit</h1>
<%= form_tag '/fruits', method: :post do  %>
  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name, @fruit.name %>
  </div>
  <div>
    <%= label_tag :image %>
    <%= text_field_tag :image, @fruit.image %>
  </div>
  <div>
    <%= label_tag :description %>
    <%= text_field_tag :description, @fruit.description %>
  </div>
  <div>
    <%= label_tag :price %>
    <%= text_field_tag :price, @fruit.price %>
  </div>
  <%= submit_tag "Submit" %>
<% end %>